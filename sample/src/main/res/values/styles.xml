<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Irr">
    </style>

    <!--
    DEFAULT LAYOUT SAMPLE
    -->
    <style name="Irr.Custom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Irr.Custom.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Irr.Custom.Button">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--
    SNACKBAR SAMPLE
    -->
    <style name="Irr.SnackBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Irr.SnackBar.Layout">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Irr.SnackBar.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Irr.SnackBar.Button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Irr.SnackBar.Button.Decline">
        <item name="android:background">@null</item>
        <item name="android:layout_width">40dp</item>
    </style>
</resources>
